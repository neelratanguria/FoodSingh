<?xml version="1.0" encoding="utf-8"?><LinearLayout android:layout_height="wrap_content"    android:layout_width="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="vertical"    xmlns:android="http://schemas.android.com/apk/res/android"><android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_height="100dp"    xmlns:card_view="http://schemas.android.com/tools"    card_view:cardUseCompatPadding="true"    card_view:cardPreventCornerOverlap="false"    card_view:cardCornerRadius="12dp"    android:layout_margin="5dp"    android:id="@+id/card_view"    android:padding="5dp"    android:layout_width="match_parent"><LinearLayout    android:orientation="horizontal"    android:layout_width="match_parent"    android:background="#ffffff"    android:layout_height="100dp">    <android.support.v7.widget.CardView        xmlns:card_view="http://schemas.android.com/apk/res-auto"        xmlns:android="http://schemas.android.com/apk/res/android"        android:id="@+id/card_viewHotelPics"        android:layout_width="wrap_content"        xmlns:app="http://schemas.android.com/apk/res-auto"        android:layout_height="wrap_content"        android:layout_gravity="center_vertical"        android:layout_marginStart="5dp"        card_view:cardUseCompatPadding="true"        card_view:cardPreventCornerOverlap="false"        card_view:cardCornerRadius="15dp"        >        <!--   Recycler View Item Row   -->        <LinearLayout            android:layout_width="86dp"            android:orientation="vertical"            android:layout_height="86dp"            android:gravity="center"            >            <com.makeramen.roundedimageview.RoundedImageView                android:id="@+id/img"                android:layout_width="86dp"                android:layout_height="89dp"                android:layout_gravity="center"                android:background="@drawable/whatsapp"                android:scaleType="centerCrop"                app:riv_corner_radius_top_left="15dp"                app:riv_corner_radius_top_right="15dp" />        </LinearLayout>    </android.support.v7.widget.CardView>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_weight="1"        android:gravity="center_vertical"        android:orientation="vertical">        <TextView            android:id="@+id/text_char_name"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:fontFamily="cursive"            android:gravity="center"            android:text="My Food"            android:textColor="@color/menu_text"            android:textSize="30dp"            android:textStyle="bold" />        <TextView            android:id="@+id/detail"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="9px"            android:gravity="center"            android:text="Details"            android:textAlignment="gravity"            android:textColor="@color/text_color"            android:textSize="18sp" />    </LinearLayout></LinearLayout></android.support.v7.widget.CardView><android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"android:layout_height="100dp"xmlns:card_view="http://schemas.android.com/tools"    card_view:cardUseCompatPadding="true"card_view:cardPreventCornerOverlap="false"card_view:cardCornerRadius="12dp"android:layout_margin="5dp"android:id="@+id/card_view2"android:layout_width="match_parent"><LinearLayout    android:orientation="horizontal"    android:layout_width="match_parent"    android:background="#ffffff"    android:layout_height="100dp"    android:weightSum="1">    <android.support.v7.widget.CardView        xmlns:card_view="http://schemas.android.com/apk/res-auto"        xmlns:android="http://schemas.android.com/apk/res/android"        android:id="@+id/card_viewHotelPics2"        android:layout_width="wrap_content"        xmlns:app="http://schemas.android.com/apk/res-auto"        android:layout_height="wrap_content"        android:layout_gravity="center_vertical"        android:layout_marginStart="5dp"        card_view:cardUseCompatPadding="true"        card_view:cardPreventCornerOverlap="false"        card_view:cardCornerRadius="15dp"        >        </android.support.v7.widget.CardView>        <!--   Recycler View Item Row   -->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_weight="1"        android:gravity="center_vertical"        android:orientation="vertical">        <TextView            android:id="@+id/text_char_name2"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:fontFamily="cursive"            android:gravity="center"            android:text="My Food"            android:textColor="@color/menu_text"            android:textSize="30dp"            android:textStyle="bold" />        <TextView            android:id="@+id/detail2"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="9px"            android:gravity="center"            android:textColor="@color/text_color"            android:textSize="18sp" />    </LinearLayout>    <android.support.v7.widget.CardView        xmlns:card_view="http://schemas.android.com/apk/res-auto"        xmlns:android="http://schemas.android.com/apk/res/android"        android:id="@+id/card_viewHotelPics3"        android:layout_width="wrap_content"        xmlns:app="http://schemas.android.com/apk/res-auto"        android:layout_height="wrap_content"        android:layout_gravity="center_vertical"        android:layout_marginStart="5dp"        card_view:cardUseCompatPadding="true"        card_view:cardPreventCornerOverlap="false"        card_view:cardCornerRadius="15dp"        >    <LinearLayout        android:layout_width="86dp"        android:orientation="vertical"        android:layout_height="86dp"        >        <com.makeramen.roundedimageview.RoundedImageView            android:id="@+id/img2"            android:layout_width="98dp"            android:layout_height="match_parent"            android:layout_gravity="center"            android:background="@drawable/whatsapp"            android:scaleType="centerCrop"            app:riv_corner_radius_top_left="15dp"            app:riv_corner_radius_top_right="15dp" />    </LinearLayout>    </android.support.v7.widget.CardView></LinearLayout></android.support.v7.widget.CardView>    </LinearLayout>