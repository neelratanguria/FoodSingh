<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    tools:context="com.foodsingh.mindwires.foodsingh.OrderPlacedActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_margin="8dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:id="@+id/logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOUR ORDER\nHAS BEEN PLACED SUCCESSFULLY"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:fontFamily="monospace"
            android:textColor="@color/menu_text"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:id="@+id/txt_successful"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/txt_successful"
            android:background="#eaeaea"
            android:layout_marginTop="16dp"
            android:id="@+id/blank_view"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blank_view"
            android:layout_marginTop="16dp"
            android:id="@+id/columns"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ORDER NUMBER"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="monospace"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AMOUNT"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="monospace"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/columns"
            android:layout_marginTop="16dp"
            android:id="@+id/values"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FS007"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/order_id"
                android:textAppearance="?android:textAppearanceMedium"
                android:fontFamily="monospace"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AMOUNT"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/order_amount"
                android:textAppearance="?android:textAppearanceMedium"
                android:fontFamily="monospace"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/values"
            android:layout_marginTop="16dp"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="BACK TO HOME"
                android:id="@+id/btn_home"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:layout_margin="12dp"
                android:clickable="true"
                android:background="@drawable/buttonbackground"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="TRACK ORDER"
                android:id="@+id/btn_track"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:fontFamily="monospace"
                android:clickable="true"
                android:background="@drawable/buttonbackground"
                />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
