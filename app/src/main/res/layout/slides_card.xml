<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    CardView:cardElevation="4dp"
    android:id="@+id/cardView"
    android:layout_width="200dp"
    android:layout_height="90dp"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="8dp"
    >
    <RelativeLayout
        android:id="@+id/r1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/whatsapp"
            android:layout_height="80dp"
            android:layout_marginStart="6dp"
            android:id="@+id/img_item_slide2"

            />

        <RelativeLayout
            android:layout_toRightOf="@+id/img_item_slide2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <TextView
                android:maxEms="10"
                android:id="@+id/dish_name_slide2"
                android:layout_width="wrap_content"
                android:layout_marginLeft="12dp"
                android:textColor="@color/bg_login"
                android:layout_marginRight="12dp"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:layout_height="24dp"
                android:gravity="left"
                android:textSize="15dp"
                android:fontFamily="casual"
                android:text="Egg Chicken Fried Rice"
                android:maxLines="1"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dish_name_slide2"
                android:layout_marginStart="16dp"
                android:textSize="18dp"
                android:text="â‚¹100"
                android:id="@+id/dish_price2"
                android:textColor="#2ECC71"
                android:textStyle="bold"

                />


            <!--   Recycler View Item Row   -->




            <ImageButton

                android:layout_width="30dp"
                android:layout_below="@+id/dish_price2"
                android:id="@+id/plus_slide2"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_add_circle_outline_black_24dp"
                />

            <TextView
                android:textSize="14dp"
                android:text="0"
                android:id="@+id/item_quantity_slide2"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:alpha="0.6"

                android:background="@color/grey"
                android:layout_below="@+id/dish_price2"
                android:layout_toLeftOf="@+id/plus_slide2"
                android:layout_marginRight="8dp"
android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />

            <ImageButton
                android:layout_width="30dp"
                android:id="@+id/minus_slide2"
                android:layout_marginLeft="5dp"

                android:layout_height="30dp"
                android:layout_below="@+id/dish_price2"
                android:layout_marginRight="4dp"
                android:background="@drawable/ic_remove_circle_black_24dp"
                />


        </RelativeLayout>

    </RelativeLayout>







</android.support.v7.widget.CardView>