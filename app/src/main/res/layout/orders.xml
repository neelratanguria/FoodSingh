<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/my_toolbar3" android:id="@+id/top"/>
<android.support.v4.widget.NestedScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_below="@+id/top"
    android:background="@color/background_color_new"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_new"
    android:weightSum="1"
    >

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/cart_bg"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/r1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView

            android:textColor="#000000"
            android:fontFamily="monospace"
            android:id="@+id/order_rev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Order Review"/>


            <TextView
                android:padding="0dp"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/order_rev"
                android:fontFamily="monospace"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:id="@+id/date"
                android:layout_below="@id/price"
                android:text="3rd October 2017"
                />
        <TextView
            android:padding="4dp"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="40dp"
            android:visibility="gone"
            android:fontFamily="monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_weight="1"
            android:id="@+id/repeatorder"
            android:layout_toRightOf="@id/order_rev"
            android:text=" REPEAT ORDER"
            />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10dp"
            android:fontFamily="monospace"
            android:id="@+id/order_number_dummy"
            android:layout_toRightOf="@id/order_rev"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_below="@id/repeatorder"
            android:text="Order No"
            />


        <TextView
            android:layout_marginLeft="60dp"
            android:fontFamily="monospace"
            android:id="@+id/price"
            android:layout_toRightOf="@id/order_number"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_below="@id/repeatorder"
            android:text="FS123"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="10dp"
                android:fontFamily="monospace"
                android:id="@+id/order_number_dummy"
                android:layout_toRightOf="@id/order_rev"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_below="@id/order_number_dummy"
                android:text="Bill Amount"
                />



            <TextView
                android:layout_marginLeft="60dp"
                android:fontFamily="monospace"
                android:id="@+id/price"
                android:layout_toRightOf="@id/order_rev"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_below="@id/order_rev"
                android:text="Rs 240"/>


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout

        android:background="@color/cart_bg"
        android:layout_marginTop="10dp"
        android:padding="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r2"
        android:layout_weight="0.67">
        <TextView

            android:textColor="#000000"
            android:fontFamily="monospace"
            android:id="@+id/items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text=" Items"/>

      <LinearLayout
        android:layout_margin="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"

          android:orientation="horizontal"
          android:weightSum="2">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="monospace"
                android:layout_weight="0.5"

              android:id="@+id/foodname"

             android:text="\n" />

          <TextView

              android:layout_width="match_parent"
                android:gravity="right"
              android:layout_height="wrap_content"
              android:layout_weight="1.5"
              android:fontFamily="monospace"
              android:id="@+id/foodqt"

              android:text="\n"
               />

      </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/cart_bg"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:id="@+id/r3">
        <TextView

            android:textColor="#000000"
            android:fontFamily="monospace"
            android:id="@+id/tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Order Status"/>

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            android:layout_below="@id/tracks"
            android:id="@+id/trackimage"
            android:src="@drawable/orderplaced"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:id="@+id/issue"
            android:layout_below="@+id/trackimage"
            android:text="Have An issue?  "
            android:fontFamily="monospace"
            android:gravity="right"
            android:textColor="@color/text_color"
            />


    </RelativeLayout>

    <RelativeLayout
        android:background="@color/cart_bg"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:id="@+id/r4">
        <TextView

            android:textColor="#000000"
            android:fontFamily="monospace"
            android:id="@+id/logisticinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Contact Person"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:id="@+id/info"
            android:layout_below="@+id/logisticinfo"
            android:text="Not Available"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:gravity="left"

            />

        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_marginTop="20dp"
            android:id="@+id/number_info"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/logisticinfo"
            android:text="Not Available"

            android:fontFamily="monospace"
            android:gravity="right"

            />


    </RelativeLayout>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:id="@+id/btm_toolbar"
        android:layout_alignParentBottom="true">
        <include layout="@layout/bottom_toolbar"/>
    </RelativeLayout>

</RelativeLayout>