<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    CardView:cardElevation="8dp"
    android:id="@+id/cardView"
    android:layout_width="172dp"
    android:layout_height="260dp"
    android:layout_margin="4dp"
    android:elevation="5dp"
    card_view:cardCornerRadius="8dp"
    >
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:id="@+id/img_item_slide"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNAVAILABLE"
                android:textSize="10sp"
                android:background="@drawable/back_unavialable"
                android:textColor="@color/white"
                android:paddingLeft="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:id="@+id/txt_unavailable"
                android:fontFamily="monospace"
                android:paddingBottom="4dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="4dp"
                android:layout_alignBottom="@id/img_item_slide"
                android:layout_alignParentEnd="true"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:layout_below="@id/img_item_slide"
                >
                <TextView

                    android:id="@+id/dish_name_slide"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold"
                    android:layout_height="40dp"
                    android:textColor="@color/bg_login"
                    android:gravity="center_horizontal"
                    android:textSize="12dp"
                    android:fontFamily="casual"
                    android:text="Egg Chickenddddddddddk \nFried Ricegggggggggggg"
                    android:maxLines="2"
                    android:layout_alignParentTop="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="46dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:text="â‚¹190"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:id="@+id/dish_price"
                    android:textColor="#2ECC71"
                    android:textStyle="bold"
                   android:layout_alignParentStart="true"
                    />


                <!--   Recycler View Item Row   -->




                <ImageButton
                    android:layout_marginTop="41dp"
                    android:layout_width="30dp"
                    android:id="@+id/plus_slide"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_add_circle_outline_black_24dp"
                    />

                <TextView
                    android:textSize="16dp"
                    android:text="0"
                    android:id="@+id/item_quantity_slide"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@color/grey"
                    android:alpha="0.6"
                    android:layout_toLeftOf="@+id/plus_slide"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="43dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    />

                <ImageButton
                    android:layout_width="30dp"
                    android:id="@+id/minus_slide"
                    android:layout_marginTop="41dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@id/item_quantity_slide"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/ic_remove_circle_black_24dp"
                    />


            </RelativeLayout>

        </RelativeLayout>


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="4dp"
        android:id="@+id/fav"
        android:src="@drawable/ic_not_fav"
        android:layout_margin="4dp"
        android:layout_gravity="end"
        />





</android.support.v7.widget.CardView>