<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginBottom="3dp"
    android:layout_width="match_parent"
    CardView:cardBackgroundColor="#f7f2e1"
    android:layout_height="100dp"
    CardView:cardElevation="4dp"
    android:layout_margin="2dp"
    android:id="@+id/cardView"
    card_view:cardCornerRadius="8dp"
    >

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/delete"
                android:src="@drawable/ic_close"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                />

            <TextView

                android:id="@+id/dish_name_slide"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="casual"
                android:textColor="@color/bg_login"
                android:gravity="left"
                android:layout_toLeftOf="@+id/delete"
                android:maxLines="1"
                android:layout_marginTop="16dp"
                android:text="Egg Chicken Fried Rice"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                 />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="75dp"
                android:textSize="18dp"
                android:text="₹190"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:id="@+id/total_dish_price"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                />


            <!--   Recycler View Item Row   -->

                <ImageButton
                    android:layout_width="30dp"
                    android:id="@+id/minus_slide"
                    android:layout_marginTop="41dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/ic_remove_circle_black_24dp"


                  />

            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:alpha="0.6"
                android:textSize="16dp"
                android:text="0"
                android:id="@+id/item_quantity_slide"

                android:layout_toRightOf="@id/minus_slide"

                android:layout_marginLeft="4dp"
                android:background="@color/grey"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                />


            <ImageButton
                android:layout_marginTop="41dp"
                android:layout_width="30dp"
                android:id="@+id/plus_slide"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/item_quantity_slide"
                android:layout_marginBottom="16dp"
                android:layout_height="30dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/ic_add_circle_outline_black_24dp"


                 />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:textSize="18dp"
                android:text="X"
                android:layout_toRightOf="@id/plus_slide"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="65dp"
                android:textSize="18dp"
                android:text="₹190"
                android:layout_toRightOf="@id/plus_slide"
                android:id="@+id/dish_price"
                android:textColor="#2ECC71"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                />





        </RelativeLayout>


</android.support.v7.widget.CardView>