<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    app:cardCornerRadius="10dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.foodsingh.mindwires.foodsingh.ViewPagerCustomDuration
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_collapseMode="pin"
        android:background="@drawable/whatsapp"
        android:fitsSystemWindows="true"
        android:id="@+id/view_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageButton
        android:fitsSystemWindows="true"
        app:layout_collapseMode="pin"
        android:id="@+id/right_arrow"
        android:layout_marginTop="80dp"
        android:layout_gravity="right"
        android:layout_width="50dp"
        android:visibility="invisible"
        android:layout_height="50dp"
        android:background="@drawable/ic_keyboard_arrow_right_white_48dp"/>


    <ImageButton
        android:fitsSystemWindows="true"
        app:layout_collapseMode="pin"
        android:id="@+id/left_arrow"
        android:layout_marginTop="80dp"
        android:layout_gravity="left"
        android:visibility="invisible"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />
    />

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:visibility="invisible"
        >

        <ImageView
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:layout_width="15dp"
            android:id="@+id/view_pager_1"
            android:layout_height="10dp" />
        <ImageView
            android:alpha="0.5"
            android:id="@+id/view_pager_2"
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:layout_width="15dp"
            android:layout_height="10dp" />
        <ImageView
            android:alpha="0.5"
            android:id="@+id/view_pager_3"
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:layout_width="15dp"
            android:layout_height="10dp" />
        <ImageView
            android:alpha="0.5"
            android:id="@+id/view_pager_4"
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:layout_width="15dp"
            android:layout_height="10dp" />
        <ImageView
            android:alpha="0.5"
            android:id="@+id/view_pager_5"
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:layout_width="15dp"
            android:layout_height="10dp" />
        <ImageView
            android:alpha="0.5"
            android:id="@+id/view_pager_6"
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:layout_width="15dp"
            android:layout_height="10dp" />

    </LinearLayout>
</FrameLayout>
</android.support.v7.widget.CardView>