<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/xx"
    tools:context="com.foodsingh.mindwires.foodsingh.Signup_OTP">

    <FrameLayout

        android:background="@drawable/xx"
        android:backgroundTint="#673AB7"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView
            android:src="@drawable/xx"
            android:alpha="0.8"
            android:scaleType="centerCrop"
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </FrameLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:alpha="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignBottom="@+id/linearLayout2"
            android:layout_alignEnd="@+id/email"
            android:background="@null"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="left"
            android:hint="Name"
            android:inputType="text"
            android:maxLength="50"
            android:textColor="#ffffff"
            android:textColorHint="#fff3f6"
            android:textSize="18dp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="vertical"
            android:layout_above="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:background="#B3B6B7"></LinearLayout>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@null"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="left"
            android:hint="Email Id"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:textColor="#ffffff"
            android:textColorHint="#fff3f6"
            android:textSize="18dp"
            android:textStyle="normal"
            android:layout_alignBottom="@+id/linearLayout3"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@+id/mob"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:background="#B3B6B7"></LinearLayout>

        <EditText
            android:id="@+id/mob"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="left"
            android:hint="10 Digit Mobile Number"
            android:inputType="phone"
            android:maxLength="12"
            android:textColor="#ffffff"
            android:textColorHint="#fff3f6"
            android:textSize="18dp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/mob"
            android:layout_alignParentStart="true"
            android:background="#B3B6B7"></LinearLayout>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="left"
            android:layout_below="@+id/mob"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textColor="#ffffff"
            android:textColorHint="#fff3f6"
            android:textSize="18dp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/password"
            android:layout_alignParentStart="true"
            android:background="#B3B6B7">

        </LinearLayout>

        <!-- Login Button -->

        <Button
            android:id="@+id/btnLinkToLoginScreen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/password"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:text="@string/btn_link_to_login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/btnLinkToLoginScreen"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="90dp"
            android:alpha="0.9"
            android:background="@drawable/buttonbackground"
            android:backgroundTint="#6e8b59"
            android:gravity="center"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/welcome"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:alpha="1"
            android:src="@drawable/feather" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif"
            android:text="Sign Up"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:textSize="45dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:layout_above="@+id/name"
            android:layout_centerHorizontal="true" />

        <!-- Link to Login Screen -->


    </RelativeLayout>

</RelativeLayout>