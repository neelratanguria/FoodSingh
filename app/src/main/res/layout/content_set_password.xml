<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.foodsingh.mindwires.foodsingh.set_password"
    tools:showIn="@layout/activity_set_password">

    <FrameLayout
        android:background="#673AB7"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/xx"
        android:scaleType="centerCrop"
        android:alpha="0.8"
        />
    </FrameLayout>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:alpha="0.9"
        android:layout_width="90dp"
        android:layout_marginLeft="5dp"
        android:layout_height="90dp"
        android:background="@drawable/fork"
        android:layout_marginTop="48dp"
        android:id="@+id/fork"
        android:layout_alignBottom="@+id/welcome"
        android:layout_centerHorizontal="true"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/txt_set_pass"
        android:alpha="0.85"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="#ffffff"
        android:text="Set new password"
        android:layout_below="@+id/fork"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />


    <EditText
        android:alpha="1"
        android:id="@+id/enter_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:inputType="textPassword"
        android:layout_below="@+id/txt_set_pass"
        android:background="@null"
        android:hint="Enter new password"
        android:textColorHint="#FFFFFF"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#B3B6B7"
        android:layout_below="@id/enter_pass"
        />

    <EditText
        android:alpha="1"
        android:id="@+id/reenter_pass"
        android:layout_width="match_parent"
        android:textColorHint="#FFFFFF"
        android:layout_height="40dp"
        android:background="@null"
        android:hint="Re-enter password"
        android:gravity="center"
        android:textSize="15dp"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:layout_below="@+id/enter_pass"
        android:layout_alignStart="@+id/enter_pass"
        android:layout_marginTop="29dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#B3B6B7"
        android:layout_below="@id/reenter_pass"
        />

    <Button
        android:alpha="1"
        android:id="@+id/enter"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:background="@drawable/buttonbackground"
        android:text="Save"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:clickable="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/reenter_pass"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
